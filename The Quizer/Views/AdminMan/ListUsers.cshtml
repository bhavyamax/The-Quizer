@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListUsers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="tblUsers" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="row">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <a asp-action="Edit" class="btn btn-link p-0" asp-route-id="@item.Id">Edit</a> |
                            <button type="submit" href="#" class="btn btn-link text-danger m-0 p-0"
                                    onclick="confirm('Sure you want to delete @item.Name?')">
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.25/b-1.7.1/fc-3.3.3/sc-2.0.4/sb-1.1.0/sp-1.3.0/sl-1.3.3/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.25/b-1.7.1/fc-3.3.3/sc-2.0.4/sb-1.1.0/sp-1.3.0/sl-1.3.3/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#tblUsers").DataTable();
        });
    </script>
}
