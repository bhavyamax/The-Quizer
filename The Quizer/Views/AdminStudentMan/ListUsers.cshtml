@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Teachers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="row">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <a asp-action="Edit" class="btn btn-link p-0" asp-route-id="@item.Id">Edit</a> |
                            <span id="confirmDeleteSpan_@item.Id" style="display:none">
                                <br /><span>Sure?</span>
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="#" class="btn btn-primary"
                                   onclick="confirmDelete('@item.Id', false)">No</a>
                            </span>

                            <span id="deleteSpan_@item.Id">
                                <a href="#" class="btn btn-link text-danger m-0 p-0"
                                   onclick="confirmDelete('@item.Id', true)">Delete</a>
                            </span>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/site.js"></script>
}
