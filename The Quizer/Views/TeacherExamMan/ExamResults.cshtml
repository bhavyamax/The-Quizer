@model Exam
@{
    ViewData["Title"] = "ExamResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ExamResults</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserExams.Single().ApplicationUser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserExams.Single().Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserExams.Single().ApplicationUser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserExams.Single().User_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserExams)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
                </td>
                <td>
                    @Html.ActionLink("Allow Resets", "ExamReTest", new { /* id=item.PrimaryKey */ examId = item.Exam_id, userId = item.User_id }) |
                    @Html.ActionLink("Delete Record", "Delete", new { /* id=item.PrimaryKey */ examId = item.Exam_id, userId = item.User_id })
                </td>
            </tr>
        }
    </tbody>
</table>
